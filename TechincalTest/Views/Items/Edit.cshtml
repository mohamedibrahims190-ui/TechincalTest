@model TechincalTest.Models.Users

@{
    ViewData["Title"] = "Edit User";
}

<body style="background-color: #FEC437;">
    <div class="container py-5">
        <!-- Page Title -->
        <h1 class="fw-bold text-center mb-4">@ViewData["Title"]</h1>

        <!-- Form -->
        <form asp-action="Update" method="post">
            <!-- Hidden Id for model binding -->
            <input type="hidden" asp-for="Id" />

            <div class="row g-4 justify-content-center">

                <!-- Name Input -->
                <div class="col-sm-12 col-md-4">
                    <div class="form-floating mb-3">
                        <input asp-for="Name" class="form-control rounded-pill shadow-sm" placeholder="Enter Name" />
                        <label asp-for="Name">Name</label>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>

                <!-- Role Input -->
                <div class="col-sm-12 col-md-4">
                    <div class="form-floating mb-3">
                        <input asp-for="Role" class="form-control rounded-pill shadow-sm" placeholder="Enter Role" />
                        <label asp-for="Role">Role</label>
                        <span asp-validation-for="Role" class="text-danger"></span>
                    </div>
                </div>

            </div>

            <!-- Buttons -->
            <div class="text-center mt-4">
                <button type="submit" class="btn btn-primary btn-lg rounded-pill shadow-sm px-5"
                        style="background: linear-gradient(135deg, #000068, #1c1c84); border: none; transition: transform 0.2s;">
                    Update
                </button>
                <a asp-action="Index" class="btn btn-secondary btn-lg rounded-pill shadow-sm px-5"
                   style="background: linear-gradient(135deg, #6c757d, #343a40); border: none; transition: transform 0.2s;">
                    Back to List
                </a>
            </div>
        </form>
    </div>
</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
