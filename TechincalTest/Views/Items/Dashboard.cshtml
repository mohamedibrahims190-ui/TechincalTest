@{
    ViewData["Title"] = "Dashboard";
}

<body style="background-color: #FEC437;">
    <div class="container py-5">
        <h1 class="fw-bold mb-4 text-center text-dark">
            <i class="fas fa-tachometer-alt me-2"></i> @ViewData["Title"]
        </h1>

        <div class="row g-4 justify-content-center">

            <!-- Show Items Card -->
            <div class="col-sm-6 col-md-4 col-lg-3">
                <div class="card text-center h-100 border-0 text-white shadow-lg"
                     style="border-radius: 20px; background: linear-gradient(135deg, #000068, #1c1c84); transition: transform 0.3s;">
                    <div class="card-body d-flex flex-column justify-content-center align-items-center">
                        <i class="bi bi-card-list mb-3" style="font-size: 55px;"></i>
                        <h4 class="card-title fw-bold">Show Items</h4>
                        <p class="card-text">View all items in the system.</p>
                        <a asp-action="Index" class="btn btn-light rounded-pill px-4 mt-auto">View</a>
                    </div>
                </div>
            </div>

            <!-- Add New Item Card -->
            <div class="col-sm-6 col-md-4 col-lg-3">
                <div class="card text-center h-100 border-0 text-white shadow-lg"
                     style="border-radius: 20px; background: linear-gradient(135deg, #1c1c84, #3a3aff); transition: transform 0.3s;">
                    <div class="card-body d-flex flex-column justify-content-center align-items-center">
                        <i class="bi bi-plus-circle mb-3" style="font-size: 55px;"></i>
                        <h4 class="card-title fw-bold">Add Item</h4>
                        <p class="card-text">Add a new item to the list.</p>
                        <a asp-action="Create" class="btn btn-light rounded-pill px-4 mt-auto">Create</a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</body>
