@model IEnumerable<TechincalTest.Models.Users>

@{
    ViewData["Title"] = "Items List";
}

<body style="background-color: #FEC437;">
    <div class="container py-5">

        <!-- Page Title -->
        <h1 class="fw-bold text-center mb-4">@ViewData["Title"]</h1>

        <!-- Add New Item Button -->
        <div class="text-center mb-4">
            <a asp-action="Create" class="btn btn-success px-4 py-2 rounded-pill shadow-sm"
               style="background: linear-gradient(135deg, #000068, #1c1c84); border: none; color: #fff;">
                Add New Item
            </a>
        </div>

        <!-- Users Table -->
        <div class="table-responsive">
            <table class="table table-striped shadow-lg" style="background-color: #ffffff; border-radius: 15px; overflow: hidden;">
                <thead class="bg-dark text-white">
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Role</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>@item.Role</td>
                            <td>
                                <!-- Edit Button -->
                                <a asp-action="Edit" asp-route-id="@item.Id"
                                   class="btn btn-warning btn-sm rounded-pill shadow-sm mx-1">
                                    Edit
                                </a>

                                <!-- Delete Button -->
                                <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-danger btn-sm rounded-pill shadow-sm mx-1"
                                            onclick="return confirm('Are you sure you want to delete this user?');">
                                        Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
