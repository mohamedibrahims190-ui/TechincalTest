@model IEnumerable<TechincalTest.Models.Users>

@{
    ViewData["Title"] = "Items List";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Add New Item</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>
                    <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Update</a>
                </td>
            </tr>
        }
    </tbody>
</table>
